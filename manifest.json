{
	"name": "Cryptojacking Detection Extension",
    "version": "1.0",
    "description": "An extension to detect and prevent Cryptojacking attacks",
	"permissions": ["storage", "tabs", "webRequest", "webRequestBlocking", "<all_urls>", "system.cpu"],
	"background": {
      "scripts": ["js/background.js"],
      "persistent": true
    },
	"browser_action": {
      "default_popup": "html/popup.html",
	  "default_title": "Cryptojacking Detection",
      "default_icon": {
        "16": "images/logo.png",
        "32": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
		}
      },
	"icons": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    },
    "manifest_version": 2
 }
